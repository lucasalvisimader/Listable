<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-1dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/header_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="br.senai.sc.listable.fragment.HeaderFragment"
            tools:layout="@layout/header_fragment" />

        <TextView
            android:id="@+id/title_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/vamos_fazer_suas_listas"
            android:textColor="@color/black_default"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/subtitle_default"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_default"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/clique_em_nova_lista_para_criar_a_sua_primeira_lista"
            android:textColor="@color/subtitle"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/list_default"
            android:layout_width="288dp"
            android:layout_height="288dp"
            android:layout_below="@+id/subtitle_default"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="29dp"
            android:contentDescription="@string/list_default"
            app:srcCompat="@drawable/list_default" />

        <Button
            android:id="@+id/add_list"
            style="@style/main_add"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/list_default"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:letterSpacing="0"
            android:text="@string/nova_lista"
            android:textSize="20sp"
            app:cornerRadius="20dp" />
</RelativeLayout>
