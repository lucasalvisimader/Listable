<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Listable" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/yellow_default</item>
        <item name="colorOnPrimary">@color/black_default</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_bg</item>
        <item name="colorOnSecondary">@color/grey_text</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="colorAccent">@color/black_default</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/black_default</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Splash" parent="Theme.MaterialComponents.NoActionBar">
        <item name="background">@color/splash_bg</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>