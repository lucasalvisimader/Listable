<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_input">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/black_default</item>
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="android:backgroundTint">@color/grey_bg</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="login_submit">
        <item name="android:textColor">@color/grey_bg</item>
        <item name="android:backgroundTint">@color/grey_text</item>
    </style>

    <style name="main_add">
        <item name="android:textColor">@color/black_default</item>
        <item name="backgroundTint">@color/yellow_secondary</item>
    </style>

    <style name="add_list_fragment_input">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_default</item>
    </style>

    <style name="navigation_drawer_item_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="menu_title_style" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="items_input_name">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/items_input_text</item>
        <item name="android:textColorHint">@color/grey_text_on_white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="items_general_inputs">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/black_tertiary</item>
        <item name="android:textColorHint">@color/items_input_text</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="items_obs">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/items_input_text</item>
        <item name="android:textColorHint">@color/grey_text_on_white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>